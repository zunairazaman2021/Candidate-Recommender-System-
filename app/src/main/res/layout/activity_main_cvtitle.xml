<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ResumeManager.MainCVTitle">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarCV"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="enterAlways|scroll" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp">
<TextView
    android:layout_marginTop="30dp"
    android:text="Create a CV"
    android:textStyle="bold"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:textColor="@color/blue3"
    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/CVTitleWrapper"
        android:layout_width="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/CVTitlep"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"

            android:textAlignment="viewStart"
            android:hint="Input CV Title"
            android:minHeight="70dp"
            android:gravity="start" />
    </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/createcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create CV"
            />
        <Button
            android:layout_marginTop="4dp"
            android:id="@+id/cancelcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel CV"
            />
    </LinearLayout>
</LinearLayout>