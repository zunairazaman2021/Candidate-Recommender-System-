<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="350dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="350dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Personal Info"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />
        <EditText
            android:id="@+id/editFname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:hint="First Name"/>

    <EditText
        android:id="@+id/editLname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginTop="4dp"
        android:hint="Last Name"/>

        <EditText
            android:id="@+id/editdob"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="4dp"
            android:hint="date of birth"/>

        <EditText
            android:id="@+id/editphone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="4dp"
            android:hint="Phone"/>

        <EditText
            android:id="@+id/editemail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="4dp"
            android:hint="Email"/>
        <EditText
            android:id="@+id/editnationality"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="4dp"
            android:hint="Nationality"/>

        <EditText
            android:id="@+id/editCurCountry"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="4dp"
            android:hint="Residence Country"/>

        <EditText
            android:id="@+id/editCurCity"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="4dp"
            android:hint="Residence City"/>

        <EditText
            android:id="@+id/editCurState"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="4dp"
            android:hint="Residence State"/>

        <EditText
            android:id="@+id/editCurzipcode"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginTop="4dp"
            android:hint="zipcode"/>
        <EditText
            android:id="@+id/CurrentPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Current password"
            />
        <Button
        android:id="@+id/saveEditProfiledetails"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttoncapsule2"
        android:text="Save"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_gravity="center_horizontal"
        android:gravity="center"/>

        <Button
            android:id="@+id/cancelEditPdetails"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttoncapsule2"
            android:text="Cancel"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
    </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/progressBareditProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:visibility="invisible"/>
</LinearLayout>