<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumeManager.ProjectsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:id="@+id/txtProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List of project details"
            />
        <TextView
            android:id="@+id/txtPjdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Details"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_below="@+id/txtProject"
            android:layout_marginTop="10dp"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/titleprojectWrapper"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txtPjdetails"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pdtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textAlignment="viewStart"
                android:hint="Title"
                android:gravity="start" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/pdDescrWrapper"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/titleprojectWrapper"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pdDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textAlignment="viewStart"
                android:hint="Description"
                android:minHeight="90dp"
                android:gravity="start" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/durationWrapper"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/pdDescrWrapper"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pdDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textAlignment="viewStart"
                android:hint="Duration/Time"
                android:gravity="start" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/roleProjectWrapper"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/durationWrapper"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/projectRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textAlignment="viewStart"
                android:hint="Role"
                android:gravity="start" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/teamWrapper"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/roleProjectWrapper"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/adteam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textAlignment="viewStart"
                android:hint="Team size"
                android:gravity="start" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/saveProjectDetails"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttoncapsule"
            android:text="Save"
            android:layout_below="@+id/teamWrapper"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>
        <Button
            android:id="@+id/savePdfDetails"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttoncapsule"
            android:text="View all project added"
            android:layout_below="@+id/saveProjectDetails"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>

    </RelativeLayout>
</ScrollView>