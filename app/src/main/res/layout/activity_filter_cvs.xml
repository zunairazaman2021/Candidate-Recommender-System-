<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarfilterCV"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/white"
            android:titleTextColor="#000">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/keyboardbackmove"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CVs available"
                    android:layout_gravity="center"
                    android:textColor="@color/darkblue"
                    android:textSize="18sp"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:id="@+id/toolbarCV_title" />

                <Button
                    android:id="@+id/filterCVbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="filter"
                    android:layout_marginLeft="70dp"
                    android:backgroundTint="@color/white"
                    android:fallbackLineSpacing="false"
                    android:textColor="@color/darkblue"
                    />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <FrameLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/somefilterCVcontent">
            </FrameLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</layout>