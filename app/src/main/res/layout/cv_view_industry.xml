<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/lime1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/lime1"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/vfIndustry"
            android:text="Industry Name: "
            android:textColor="@color/bluelike1"
            android:textStyle="bold"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/vIndustry"
            android:text="null"
            android:textColor="@color/black1"
            android:textStyle="italic"
            android:layout_toRightOf="@+id/vfIndustry"
            android:layout_toEndOf="@+id/vfIndustry"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>