<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_margin="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/office_building" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/image"
                android:layout_marginTop="5dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:gravity="left"
                android:text="Pakistan"
                android:paddingLeft="5dp"
                android:textColor="@color/green1" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/txt1"
                android:layout_marginTop="4dp"
                android:autoSizeMaxTextSize="10sp"
                android:autoSizeMinTextSize="4sp"
                android:paddingLeft="5dp"
                android:gravity="right"
                android:text="Job Name"
                android:textColor="@color/blue3" />


            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="24dp"
                android:textColor="#004D00"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:textAllCaps="true"
                android:text="My Rank:  8/9"
                android:visibility="invisible"
                android:layout_alignParentLeft="true" />
            <TextView
                android:visibility="invisible"
                android:id="@+id/creatorid"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="creator"/>

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/txt4"
                android:layout_marginEnd="57dp"
                android:text="Date Applied: January 21,2019"
                android:layout_alignParentRight="true"
                android:textColor="#1A237E"
                android:textAllCaps="true"
                android:layout_marginRight="57dp" />

            <TextView
                android:id="@+id/txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="14dp"
                android:autoSizeTextType="uniform"

                android:text="Status: Not Viewed"
                android:textColor="#B71C1C"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_below="@+id/txt3"
                android:text="More detail"
                android:textColor="@color/bluelike1"
                android:layout_marginTop="4dp"
                android:id="@+id/moredetailbtn"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:layout_marginLeft="150dp"
                android:gravity="center"
                android:drawableRight="@drawable/movenextbutton"
                android:layout_marginBottom="4dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>