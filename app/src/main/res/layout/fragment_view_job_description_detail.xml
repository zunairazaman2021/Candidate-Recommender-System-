<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewJobDescriptionDetail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/basic2"
            android:background="#fff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{productView.product.title}"
                android:layout_marginTop="20dp"
                android:id="@+id/titletext2"
                android:textSize="18sp"
                android:paddingLeft="4dp"
                android:textColor="@color/darkblue"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkgray"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:id="@+id/companytxt2"
                android:layout_below="@+id/titletext2"
                android:layout_marginTop="1dp"
                android:text="@{productView.product.company}"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/experience2"
                android:drawableLeft="@drawable/briefexperiencekey"
                android:text=" 0-2 years"
                android:layout_below="@+id/companytxt2"
                android:paddingLeft="4dp"
                android:layout_marginTop="1dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vacancytxt2"
                android:text=" 2 Vacancies"
                android:drawableLeft="@drawable/noofpeople"
                android:layout_below="@+id/companytxt2"
                android:layout_toEndOf="@+id/experience2"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/experience2"
                android:layout_marginTop="1dp"
                android:paddingLeft="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{productView.product.country}"
                android:id="@+id/contrytxt2"
                android:layout_below="@+id/experience2"
                android:layout_marginTop="1dp"
                android:drawableLeft="@drawable/room"
                android:drawablePadding="2dp"
                android:paddingLeft="4dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contrytxt2"
                android:id="@+id/mm2"
                android:layout_marginTop="1dp"
                android:drawableLeft="@drawable/money"
                android:text="Not Disclosed" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desired Candidate profile"
                android:textSize="18sp"
                android:id="@+id/candidateview2"
                android:layout_below="@+id/mm2"
                android:textColor="@color/darkblue"
                android:drawableLeft="@drawable/singleperson"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Any Nationality"
                android:drawableLeft="@drawable/publicglobe"
                android:layout_below="@+id/candidateview2"
                android:layout_marginTop="1dp"
                android:id="@+id/nationaltxt2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/school"
                android:text="Basic - Bachelor of technology/Engineering"
                android:layout_below="@+id/nationaltxt2"
                android:id="@+id/edutxt2"
                android:paddingLeft="2dp"/>

            <TextView
                android:id="@+id/description_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_below="@+id/edutxt2"
                android:layout_marginTop="2dp"
                android:text="@{productView.product.description}"
                android:drawableLeft="@drawable/bulletedlist" />

            <ImageButton
                android:id="@+id/showv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/description_text2"
                android:background="@drawable/arrowdown"
                android:clickable="true" />

            <View
                android:id="@+id/view1v"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@+id/description_text2"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/showv"
                android:background="@color/darkgray" />

            <ImageButton
                android:id="@+id/hidev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/description_text2"
                android:background="@drawable/arrowup"
                android:clickable="true"
                android:visibility="invisible" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1v"
                android:layout_marginTop="10dp"
                android:text="Job Description"
                android:id="@+id/jdsv"
                android:textColor="@color/darkblue"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_below="@+id/jdsv"
                android:drawableLeft="@drawable/bulletedlist"
                android:layout_marginTop="2dp"
                android:text="@{productView.product.description}"
                android:id="@+id/textdescripv"/>
            <ImageButton
                android:id="@+id/show2v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textdescripv"
                android:background="@drawable/arrowdown"
                android:clickable="true" />

            <View
                android:id="@+id/view2v"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@+id/textdescripv"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/showv"
                android:background="@color/darkgray" />

            <ImageButton
                android:id="@+id/hide2v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textdescripv"
                android:background="@drawable/arrowup"
                android:clickable="true"
                android:visibility="invisible" />

        </RelativeLayout>
    </ScrollView>
</FrameLayout>